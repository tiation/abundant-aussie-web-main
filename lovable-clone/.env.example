# BuildAI Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Gemini AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key

# Database (if using direct database connection)
DATABASE_URL=your_database_connection_string

# Optional: Custom API Endpoints
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Optional: Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_AUTHENTICATION=true

# Optional: Third-party Services
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Optional: Email Service (for contact forms, etc.)
SENDGRID_API_KEY=your_sendgrid_api_key
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Development Settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# CI/CD Configuration (Set these in your CI/CD platform as secure variables)
# Docker Registry
DOCKER_REGISTRY_USER=your-docker-registry-username
DOCKER_REGISTRY_PASSWORD=your-docker-registry-password

# SSH Configuration for deployment
SSH_PRIVATE_KEY=your-ssh-private-key-for-server-access

# Grafana API for alerts
GRAFANA_API_KEY=your-grafana-api-key

# Staging Environment Variables
STAGING_NEXT_PUBLIC_SUPABASE_URL=your-staging-supabase-url
STAGING_NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-supabase-anon-key
STAGING_SUPABASE_SERVICE_ROLE_KEY=your-staging-supabase-service-role-key
STAGING_GOOGLE_AI_API_KEY=your-staging-google-ai-api-key
STAGING_NEXTAUTH_SECRET=your-staging-nextauth-secret
STAGING_NEXTAUTH_URL=https://staging.buildai.sxc.codes

# Security Scanning
SNYK_TOKEN=your-snyk-token
