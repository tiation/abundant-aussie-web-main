# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
max_line_length = 100

# JSON files
[*.{json,jsonc}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Docker files
[{Dockerfile,Dockerfile.*}]
indent_size = 2

# Package.json files
[package.json]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg,conf}]
indent_size = 2

# Web files
[*.{html,css,scss,sass,less}]
indent_size = 2

# XML files
[*.{xml,svg}]
indent_size = 2

# Makefiles
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Rust files
[*.rs]
indent_size = 4

# C/C++ files
[*.{c,cpp,cc,cxx,h,hpp,hxx}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# GraphQL files
[*.{gql,graphql}]
indent_size = 2
