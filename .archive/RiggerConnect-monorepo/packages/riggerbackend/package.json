{
  "name": "@rigger/backend",
  "version": "1.0.0",
  "description": "RiggerBackend - Unified backend services for Rigger ecosystem applications with Node.js + TypeScript + Fastify + Supabase",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:migration:new": "supabase migration new",
    "supabase:migration:up": "supabase migration up",
    "supabase:gen-types": "supabase gen types typescript --local > src/types/supabase.ts",
    "docker:build": "docker build -t rigger-backend .",
    "docker:run": "docker run -p 3000:3000 rigger-backend",
    "prepare": "husky install"
  },
  "dependencies": {
    "@rigger/shared": "file:../shared",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/session": "^10.7.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/static": "^7.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@supabase/supabase-js": "^2.39.3",
    "fastify": "^4.26.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^14.15.0",
    "nodemailer": "^6.9.8",
    "winston": "^3.11.0",
    "joi": "^17.12.0",
    "redis": "^4.6.12",
    "dotenv": "^16.3.1",
    "@tensorflow/tfjs-node": "^4.15.0",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "dayjs": "^1.11.10",
    "ioredis": "^5.3.2",
    "bullmq": "^5.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/nodemailer": "^6.4.14",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "supabase": "^1.142.2",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3",
    "supertest": "^6.3.4"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tiation/RiggerConnect-monorepo.git",
    "directory": "packages/riggerbackend"
  },
  "keywords": [
    "rigger",
    "backend",
    "api",
    "construction",
    "mining",
    "compliance",
    "fastify",
    "typescript",
    "supabase"
  ],
  "author": "ChaseWhiteRabbit NGO",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
