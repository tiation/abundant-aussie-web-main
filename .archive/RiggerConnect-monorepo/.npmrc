# NPM Configuration for RiggerConnect Monorepo
# Follows ChaseWhiteRabbit NGO enterprise standards

# Performance optimizations
prefer-offline=true
audit-level=moderate
fund=false

# Security settings
audit=true

# Package installation
save-exact=true
package-lock=true

# Registry settings (can be overridden for private packages)
registry=https://registry.npmjs.org/

# Engine strict mode
engine-strict=true

# Progress settings
progress=true

# Workspace configuration
workspaces-update=true

# Legacy peer deps (disable for cleaner dependency resolution)
legacy-peer-deps=false

# Optional dependencies
optional=true

# Timing information
timing=true

# Update notifications
update-notifier=false
