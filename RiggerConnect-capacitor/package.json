{
  "name": "riggerconnect-capacitor",
  "version": "1.0.0",
  "description": "RiggerConnect Cross-Platform Mobile App with Capacitor",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "dev": "npx vite --host",
    "build": "npx vite build",
    "build:prod": "NODE_ENV=production npx vite build",
    "preview": "npx vite preview --host",
    "lint": "npx tsc --noEmit",
    "clean": "rm -rf dist android/app/src/main/assets/public ios/App/App/public",
    "cap:sync": "npx cap sync",
    "cap:sync:android": "npx cap sync android",
    "cap:sync:ios": "npx cap sync ios",
    "cap:run:ios": "npx cap run ios",
    "cap:run:android": "npx cap run android",
    "cap:build:ios": "npm run build && npx cap copy ios && npx cap open ios",
    "cap:build:android": "npm run build && npx cap copy android && npx cap open android",
    "cap:build:ios:prod": "npm run build:prod && npx cap copy ios && npx cap open ios",
    "cap:build:android:prod": "npm run build:prod && npx cap copy android && npx cap open android",
    "cap:build:all": "npm run build && npx cap copy",
    "cap:build:all:prod": "npm run build:prod && npx cap copy",
    "cap:add:ios": "npx cap add ios",
    "cap:add:android": "npx cap add android",
    "cap:doctor": "npx cap doctor",
    "cap:clean": "npx cap clean",
    "android:clean": "cd android && ./gradlew clean",
    "android:build": "cd android && ./gradlew assembleDebug",
    "android:build:release": "cd android && ./gradlew assembleRelease",
    "android:studio": "npx cap open android",
    "ios:build": "cd ios && xcodebuild -workspace App.xcworkspace -scheme App -configuration Debug -destination generic/platform=iOS",
    "ios:build:release": "cd ios && xcodebuild -workspace App.xcworkspace -scheme App -configuration Release -destination generic/platform=iOS",
    "ios:xcode": "npx cap open ios",
    "deploy:prepare": "npm run clean && npm run build:prod && npm run cap:sync",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:unit": "jest --testPathPattern=src/",
    "test:integration": "jest --testPathPattern=tests/integration/",
    "test:capacitor": "jest --testPathPattern=tests/capacitor/",
    "test:e2e": "jest --testPathPattern=tests/e2e/",
    "test:android": "npm run cap:build:android && cd android && ./gradlew test connectedAndroidTest",
    "test:ios": "npm run cap:build:ios && cd ios && xcodebuild test -workspace App.xcworkspace -scheme App -destination 'platform=iOS Simulator,name=iPhone 15'",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:capacitor",
    "test:enterprise": "npm run test:all && npm run test:android && npm run test:ios"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/camera": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/device": "^6.0.0",
    "@capacitor/geolocation": "^6.0.0",
    "@capacitor/haptics": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/keyboard": "^6.0.0",
    "@capacitor/network": "^6.0.0",
    "@capacitor/preferences": "^6.0.0",
    "@capacitor/push-notifications": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "@rigger/shared": "file:../RiggerShared/rigger-shared-1.0.0.tgz",
    "@supabase/supabase-js": "^2.52.0",
    "framer-motion": "^12.23.6",
    "lucide-react": "^0.525.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@capacitor/cli": "^6.0.0",
    "@jest/types": "^30.0.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-testing-library": "^7.6.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-transform-stub": "^2.0.0",
    "jest-watch-typeahead": "^3.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.5.3",
    "vite": "^5.4.1"
  },
  "keywords": [
    "capacitor",
    "react",
    "supabase",
    "rigger",
    "construction",
    "mobile"
  ],
  "author": "ChaseWhiteRabbit NGO",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
